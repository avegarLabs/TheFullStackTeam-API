@model TheFullStackTeam.CvPdfGenerator.ViewModels.ProfessionalVitaeViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        .row {
            --bs-gutter-x: 1.5rem;
            --bs-gutter-y: 0;
            display: flex;
            flex-wrap: wrap;
            margin-top: calc(-1 * var(--bs-gutter-y));
            margin-right: calc(-.5 * var(--bs-gutter-x));
            margin-left: calc(-.5 * var(--bs-gutter-x))
        }

            .row > * {
                flex-shrink: 0;
                width: 100%;
                max-width: 100%;
                padding-right: calc(var(--bs-gutter-x) * .5);
                padding-left: calc(var(--bs-gutter-x) * .5);
                margin-top: var(--bs-gutter-y)
            }

        .col-1 {
            flex: 0 0 auto;
            width: 8.33333333%
        }

        .col-2 {
            flex: 0 0 auto;
            width: 16.66666667%
        }

        .col-3 {
            flex: 0 0 auto;
            width: 25%
        }

        .col-4 {
            flex: 0 0 auto;
            width: 33.33333333%
        }

        .col-5 {
            flex: 0 0 auto;
            width: 41.66666667%
        }

        .col-6 {
            flex: 0 0 auto;
            width: 50%
        }

        .col-7 {
            flex: 0 0 auto;
            width: 58.33333333%
        }

        .col-8 {
            flex: 0 0 auto;
            width: 66.66666667%
        }

        .col-9 {
            flex: 0 0 auto;
            width: 75%
        }

        .col-10 {
            flex: 0 0 auto;
            width: 83.33333333%
        }

        .col-11 {
            flex: 0 0 auto;
            width: 91.66666667%
        }

        .col-12 {
            flex: 0 0 auto;
            width: 100%
        }

        body {
            margin: 0;
            font-family: var(--bs-body-font-family);
            font-size: var(--bs-body-font-size);
            font-weight: var(--bs-body-font-weight);
            line-height: var(--bs-body-line-height);
            color: var(--bs-body-color);
            text-align: var(--bs-body-text-align);
            -webkit-text-size-adjust: 100%;
            -webkit-tap-highlight-color: transparent;
        }

        hr {
            margin: 1rem 0;
            color: inherit;
            border: 0;
            border-top: var(--bs-border-width) solid;
            opacity: .25;
            padding-top: -10px;
            
        }

        .h1,
        .h2,
        .h3,
        .h4,
        .h5,
        .h6,
        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            margin-top: 0;
            margin-bottom: .5rem;
            font-weight: 500;
            line-height: 1.2;
            color: var(--bs-heading-color, inherit)
        }

        .h1,
        h1 {
            font-size: calc(1.375rem + 1.5vw)
        }



        .h2,
        h2 {
            font-size: calc(1.325rem + .9vw)
        }


        .h3,
        h3 {
            font-size: calc(1.3rem + .6vw)
        }



        .h4,
        h4 {
            font-size: calc(1.275rem + .3vw)
        }



        .h5,
        h5 {
            font-size: 1.25rem
        }

        .h6,
        h6 {
            font-size: 1rem
        }

        p {
            margin-top: 0;
            margin-bottom: 1rem margin-bottom: 1rem
        }

        .banner {
            background-image: url('https://devtfststorage.blob.core.windows.net/common/banner-info.png');
            background-repeat: no-repeat;
            background-size: cover;
            height: 200px; /* Ajusta la altura según tu necesidad */
        }

        .avatar {
            text-align: center; /* Para centrar horizontalmente */
            display: flex; /* Para centrar verticalmente */
            justify-content: center; /* Para centrar verticalmente */
            align-items: center; /* Para centrar verticalmente */
        }

        .text-primary {
            --bs-text-opacity: 1;
            color: dodgerblue !important
        }

        .text-secondary {
            --bs-text-opacity: 1;
            color: rgba(var(--bs-secondary-rgb), var(--bs-text-opacity)) !important
        }

        .text-success {
            --bs-text-opacity: 1;
            color: rgba(var(--bs-success-rgb), var(--bs-text-opacity)) !important
        }

        .text-info {
            --bs-text-opacity: 1;
            color: rgba(var(--bs-info-rgb), var(--bs-text-opacity)) !important
        }

        .text-warning {
            --bs-text-opacity: 1;
            color: rgba(var(--bs-warning-rgb), var(--bs-text-opacity)) !important
        }

        .text-danger {
            --bs-text-opacity: 1;
            color: rgba(var(--bs-danger-rgb), var(--bs-text-opacity)) !important
        }

        .text-light {
            --bs-text-opacity: 1;
            color: rgba(var(--bs-light-rgb), var(--bs-text-opacity)) !important
        }

        .text-dark {
            --bs-text-opacity: 1;
            color: black !important
        }

        .text-black {
            --bs-text-opacity: 1;
            color: rgba(var(--bs-black-rgb), var(--bs-text-opacity)) !important
        }

        .text-white {
            --bs-text-opacity: 0.8;
            color: darkslategray !important
        }

        .text-end {
            text-align: right !important
        }

        ul.horizontal-list {
            padding-top: -10px;
        }

            ul.horizontal-list li {
                display: inline-block;
            }

    </style>
</head>
<body>
        <div class="col-12" style="padding-top:70px">
            <h3 class="text-primary">PROFILE</h3>
            <h5>@Model.Title</h5>
            <p>@Model.AboutMe</p>
        </div>

    <div class="col-12" style="padding-top:10px">
            <h3 class="text-primary">KEY SKILLS</h3>
            <ul>
                @foreach (var sk in Model.skillListItems)
                {
                    <li>@sk.SkillName</li>
                }
            </ul>
        </div>

    <div class="col-12" style="padding-top:10px">
            <h3 class="text-primary">LANGUAGES</h3>
            <ul>
                @foreach (var lang in Model.professionalLanguegeListItems)
                {
                    <li>@lang.Name - @lang.Level</li>
                }
            </ul>
        </div>

    <div class="col-12" style="padding-top:10px;">
            <h3 class="text-primary">EDUCATION/TRAINING</h3>
           
                @{
                    var titles = Model.titleListItems.FindAll(t => t.TitleType == "Title");
                }
                 <ul>
                @foreach (var item in titles)
                {
                    <li> @item.EndMonthYear.ToString("yyyy"): @item.Name - @item.OrganizationName - @item.OrganizationCountry </li>
                }
            </ul>
        </div>
    <div class="col-12" style="padding-top:10px;">
            <h3 class="text-primary">CERTIFICATION</h3>
            @{
                var certifications = Model.titleListItems.FindAll(t => t.TitleType == "Certification");
            }
                 <ul>
                @foreach (var item in certifications)
                {
                    <li> @item.EndMonthYear.ToString("yyyy"): @item.Name - @item.OrganizationName </li>
                }
            </ul>
        </div>

    <div class="col-12" style="padding-top:10px;">
            <h3 class="text-primary">WORK EXPERIENCE</h3>
            @foreach (var experiencia in Model.positionListItems)
            {
                <div class="row">
                    <div class="col-3">
                        <p>@experiencia.StartMonthYear.ToString("MM/yyyy")  - @experiencia.EndMonthYear.ToString("MM/yyyy")</p>
                    </div>
                    <div class="col-9">
                        <p>@experiencia.OrganizationName</p>
                        <p>@experiencia.Name</p>
                        <p>@experiencia.Description</p>
                        <p style="padding-top:5px;"><strong>Technologies used:</strong></p>
                        <ul class="horizontal-list">
                            @{
                                var i = 0;
                                foreach (var sk in experiencia.SkillPositionLists)
                                {
                                    i++;

                                    if (i < experiencia.SkillPositionLists.Count())
                                    {
                                        <li>@sk.Description,</li>
                                    }
                                    else
                                    {

                                        <li>@sk.Description</li>
                                    }
                                }
                            }
                        </ul>


                    </div>
                </div>
                <br />
            }
        </div>
</body>
</html>






